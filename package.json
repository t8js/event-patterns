{
  "name": "@t8/event-patterns",
  "version": "1.0.3",
  "description": "Lightweight event emitter with flexible event type matching",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all cleanup compile",
    "cleanup": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "npx npm-run-all compile:src compile:tests",
    "compile:src": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "compile:tests": "npx esbuild tests.ts --bundle --outdir=dist --platform=neutral",
    "prepublishOnly": "npx npm-run-all build test",
    "preversion": "npx npm-run-all typecheck build test",
    "test": "node dist/tests.js",
    "typecheck": "tsc --noEmit"
  },
  "author": "axtk",
  "license": "ISC",
  "keywords": [
    "events",
    "event-manager",
    "event-emitter",
    "dispatcher",
    "mediator",
    "regexp"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/t8js/event-patterns.git"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
