{
  "name": "@t8/events",
  "version": "1.0.9",
  "description": "Lightweight event emitter with flexible event type matching",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all cleanup compile types",
    "cleanup": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx npm-run-all compile:src compile:tests",
    "compile:src": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "compile:tests": "npx esbuild tests.ts --bundle --outdir=dist --platform=neutral",
    "prepublishOnly": "npx npm-run-all build test",
    "preversion": "npx npm-run-all typecheck shape build test",
    "shape": "npx codeshape",
    "test": "node dist/tests.js",
    "typecheck": "tsc --noEmit",
    "types": "tsc --emitDeclarationOnly"
  },
  "author": "axtk",
  "license": "MIT",
  "keywords": [
    "events",
    "event-manager",
    "event-emitter",
    "dispatcher",
    "mediator",
    "regexp"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/t8js/events.git"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
