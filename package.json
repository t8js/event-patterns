{
  "name": "@t8/events",
  "version": "1.1.0",
  "description": "Lightweight event emitter with flexible event type matching",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "preversion": "npx npm-run-all clean shape compile test",
    "shape": "npx codeshape --typecheck --emit-types",
    "test": "node tests.ts"
  },
  "author": "axtk",
  "license": "MIT",
  "keywords": [
    "events",
    "event-manager",
    "event-emitter",
    "dispatcher",
    "mediator",
    "regexp"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/t8js/events.git"
  }
}
